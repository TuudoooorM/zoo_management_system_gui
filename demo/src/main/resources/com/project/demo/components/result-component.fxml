<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<fx:root type="javafx.scene.layout.HBox" alignment="CENTER"
      style="-fx-background-color: linear-gradient(to right, #8ADE7C, #2B7A1F); -fx-background-radius: 50;"
      HBox.hgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1"
>
    <Label fx:id="resultLabel" textAlignment="CENTER" textFill="#09220e">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <font>
            <Font name="Montserrat Black" size="12.0" />
        </font>
    </Label>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
